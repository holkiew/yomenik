#!/bin/sh
sudo service mongod start &
cd /home/ec2-user/repos/yomenik/build/backend
/usr/java/jdk-12.0.2/bin/java -jar -Dspring.profiles.active=native cloudconfig.jar 2> configLogs.txt &
sleep 20
/usr/java/jdk-12.0.2/bin/java -jar eurekson.jar 2> eurekaLogs.txt &
sleep 20
/usr/java/jdk-12.0.2/bin/java -jar user-service.jar 2> usLogs.txt &
/usr/java/jdk-12.0.2/bin/java -jar gatewayix.jar 2> gatewayLogs.txt &
/usr/java/jdk-12.0.2/bin/java -jar battlesim-service.jar bsLogs.txt &
cd ../frontend
sudo serve -p 80 2> frontLogs.txt &
